  <script>
    function toggleLanguage() {
      const langToggle = document.querySelector('.lang-toggle');
      if (langToggle.textContent.includes("ENG")) {
        langToggle.textContent = "RU / ENG";
        document.querySelector(".hero-title").textContent = "ФРОНТЕНД-РАЗРАБОТЧИК";
        document.querySelector(".hero-subtitle").textContent = "Я Винай Патиль – веб-разработчик, создающий красивые и адаптивные сайты.";
        document.querySelector(".cta-btn").textContent = "Исследовать услуги 🚀";
        document.querySelector(".services h1").textContent = "МОИ УСЛУГИ";
      } else {
        langToggle.textContent = "ENG / RU";
        document.querySelector(".hero-title").textContent = "FRONTEND DEVELOPER";
        document.querySelector(".hero-subtitle").textContent = "I am Vinay Patil – web-developer with a passion for creating beautiful and responsive websites.";
        document.querySelector(".cta-btn").textContent = "Explore Services 🚀";
        document.querySelector(".services h1").textContent = "MY SERVICES";
      }
    } -->

    <!-- // Smooth scrolling for navigation
    document.querySelectorAll('a[href^="#"]').forEach(anchor => {
